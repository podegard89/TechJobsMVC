<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
                <span>
                    <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked="@column.Key == 'all'" />
                    <label for="@column.Key">@column.Value</label>
                </span>
            }

        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />

    @if (ViewBag.searchResults != null)
    {
        <div class="container body-content">

            @foreach (Job job in ViewBag.searchResults)
            {
                //TODO #1: Use a loop to display job results in a table.
                <table class="job-listing">
                    <tr>
                        <td>ID</td>
                        <td>@job.Id</td>
                    </tr>
                    <tr>
                        <td>Name</td>
                        <td>@job.Name</td>
                    </tr>
                    <tr>
                        <td>Employer</td>
                        <td>@job.Employer</td>
                    </tr>
                    <tr>
                        <td>Location</td>
                        <td>@job.Location</td>
                    </tr>
                    <tr>
                        <td>Position Type</td>
                        <td>@job.PositionType</td>
                    </tr>
                    <tr>
                        <td>Skill</td>
                        <td>@job.CoreCompetency</td>
                    </tr>
                </table>
            }


        </div>
    }


</div>